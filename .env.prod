# 应用配置
NODE_ENV=production
PORT=3009
APP_NAME=ERP-Core

# 数据库配置 (使用容器名称)
DB_TYPE=mysql
DB_HOST=erp-mysql
DB_PORT=3306
DB_USERNAME=erp_user
DB_PASSWORD=erp_password_123
DB_DATABASE=erp_core
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Redis 配置 (使用容器名称)
REDIS_HOST=erp-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here

# JWT 配置
JWT_SECRET=your-super-strong-production-secret-key-change-this
JWT_EXPIRES_IN=7d

# 文件上传
UPLOAD_MAX_SIZE=10485760
UPLOAD_DEST=./uploads

# 日志配置
LOG_LEVEL=warn
LOG_DIR=./logs
